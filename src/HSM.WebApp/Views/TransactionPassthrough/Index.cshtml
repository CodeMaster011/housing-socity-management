@model HSM.WebApp.Data.Models.TransactionPassthrough[]
@{
    ViewData["Title"] = "Passthrough";
}

<div class="text-center">
    <h1 class="display-4">Transaction Passthrough</h1>
</div>

<div>
    <a class="btn btn-primary" href="/TransactionPassthrough/create" role="button">Create</a>
</div>
@* <div class="btn-group" role="group" aria-label="Basic example">
    
    <a class="btn btn-primary" href="#" role="button">Link</a>
</div> *@


@* card/ table *@
<table class="mt-3 table">
    <thead>
        <th>#</th>
        <th>Name</th>
        <th>IsLocked</th>
        <th>Balance</th>
    </thead>
    <tbody>
        @{var x = 1;}
        @foreach (var pt in Model)
        {
            <tr>
                <td>@x</td>
                <td><a href="/TransactionPassthrough/details/@pt.Id">@pt.Name</a></td> @* links to details *@
                <td>@pt.IsLocked</td>
                <td>@pt.Balance</td>
            </tr>
            x++;
        }
    </tbody>
</table>
