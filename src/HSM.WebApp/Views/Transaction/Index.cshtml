@model HSM.WebApp.Data.Models.Transaction[]
@{
    ViewData["Title"] = "Transaction";
}

<div class="text-center">
    <h1 class="display-4">Transactions</h1>
</div>

<div>
    <a class="btn btn-primary" href="/transaction/create" role="button">Create</a>
</div>

<table class="mt-3 table">
    <thead>
        <th>#</th>
        <th>Date</th>
        <th>Description</th>
        <th>Amount</th>
        <th>Ledger</th>
        <th>Passthrough</th>
        <th>Unit</th>
        <th>Account</th>
    </thead>
    <tbody>
        @{var x = 1;}
        @foreach (var transaction in Model)
        {
            <tr>
                <td>@x</td>
                <td>@transaction.Date?.ToString("dd MMM, yyyy")</td>
                <td><a href="/transaction/details/@transaction.Id">@transaction.Description</a></td> @* links to details *@
                <td>@transaction.Amount.ToString("C2")</td>
                <td>@transaction.Ledger.Name</td>
                <td>@transaction.Passthrough.Name</td>
                <td>@transaction.Unit.Name</td>
                <td>@transaction.Account.Member.Name</td>
            </tr>
            x++;
        }
    </tbody>
</table>
